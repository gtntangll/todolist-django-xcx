/**index.wxss**/
.head {
  float: left;
  height: 30vw;
  width: 100vw;
  background-color: #0a73cc;
  border-radius: 3vw 3vw 0 0;
}

.userinfo-avatar {
  display: block;
  float: left;
  width: 20vw;
  height: 20vw;
  margin: 5vw 3vw;
  border-radius: 50%;
  border: 2px #428BCA solid;
}

.userinfo-nickname {
  color: #eee;
  margin-top: 8vw;
  font-size: 18px;
  width: 40vw;
  margin-left: 5vw;
  float: left;
}

.addbtn {
  width: 25vw;
  height: 12vw;
  float: right;
  background-color: #eee;
  border-radius: 0 3vw 0 5vw;
  text-align: center;
  line-height: 12vw;
  color: #0a73cc;
  font-size: 16px;
}

.addbtn-hover {
  background-color: #0faeff;
  color: #eee;
}

.task-style-num {
  width: 67vw;
  float: left;
  margin-left: 5vw;
  height: 5vw;
  margin-top: 4vw;
  overflow: hidden;
}

.task-style-num>view {
  float: left;
  color: #eee;
  height: 5vw;
  line-height: 6vw;
  margin-left: 1vw;
  width: 15vw;
  overflow: hidden;
}

.task-style-num>view icon {
  display: block;
  width: 5vw;
  height: 5vw;
  border-radius: 50%;
  margin-right: 1vw;
  float: left;
}

.tasklist-btn {
  width: 100vw;
  height: 12vw;
  overflow: hidden;
  background-color: #eee;
  color: #586069;
  font-size: 16px;
}

.tasklist-btn>view {
  width: 50vw;
  height: 12vw;
  text-align: center;
  float: left;
  line-height: 12vw;
}

.tasklist-btn>view.active{
  font-weight: 500;
  color: #0a73cc;
  background-color: #fff;
  border-top: 2px #e36208 solid; 
}

.tasklist-contain {
  height: calc(100vh - 42vw);
  width: 100vw;
}

.tasklist-contain .tasklist-item {
  height: 18vw;
  width: 96vw;
  margin-left: 2vw;
  margin-top: 4vw;
  border-radius: 2vw;
  float: left;
  background-color: #0a73cc;
}

.tasklist-item>.item-left {
  width:14vw;
  height:14vw;
  float: left;
  margin: 0 0 2vw 4vw;
  margin-top: calc(2vw - 2px);
  border-radius: 2vw;
  border: 2px #428BCA solid;
  text-align: center;
  font-size: 16px;
  line-height: 7vw;
  color: #eee;
  font-weight: 500;
}

.tasklist-item>.item-right {
  height: 14vw;
  margin-top: 2vw;
  margin-left: 6vw;
  width: 70vw;
  float: left;
  color: #eee;
}

.item-title{
  font-size: 18px;
}

.item-deadline {
  font-size:16px;
}

.red {
  background-color: #f86261;
}

.green {
  background-color: #09ba07;
}

.blue {
  background-color: #0faeff;
}

.yellow {
  background-color: #fea500;
}

.task-null {
  text-align: center;
  color: #777;
  margin-top: 4vw;
}

.getmore {
  text-align: center;
  color: #777;
  width: 100vw;
  margin-top: 5vw;
  font-size: 14px;
  float: left;
}